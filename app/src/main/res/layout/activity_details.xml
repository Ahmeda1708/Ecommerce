<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context="mohamed.ecommerce.views.DetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:paddingBottom="@dimen/_40sdp"
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/RL_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e2e2e2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_230sdp">

                    <LinearLayout
                        android:id="@+id/topButtons"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3">

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:background="#5a8ded"
                                android:text="featured"
                                android:textColor="#fff"
                                android:textSize="@dimen/_9sdp" />
                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_40sdp"
                            android:layout_marginStart="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_9sdp"
                            android:layout_weight="1"
                            android:background="#ecebeb"
                            android:gravity="center">

                            <ToggleButton
                                android:id="@+id/button_fav"
                                android:layout_width="19dp"
                                android:layout_height="19dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginEnd="20dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/ic_unlike"
                                android:textOff=""
                                android:textOn="" />

                            <Button
                                android:id="@+id/button"
                                android:layout_width="19dp"
                                android:layout_height="19dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/ic_share" />

                        </RelativeLayout>
                    </LinearLayout>

                    <android.support.v4.view.ViewPager
                        android:id="@+id/pager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/topButtons" />


                    <me.relex.circleindicator.CircleIndicator
                        android:id="@+id/indicator"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_alignParentBottom="true" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/LL_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/RL_top"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_8sdp"
                android:paddingLeft="@dimen/_13sdp"
                android:paddingStart="@dimen/_13sdp">

                <LinearLayout
                    android:id="@+id/LL_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/_3sdp"
                    android:paddingTop="@dimen/_2sdp">

                    <TextView
                        android:id="@+id/product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$17:00"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="#6c6c6c" />

                    <TextView
                        android:id="@+id/product_over_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_3sdp"
                        android:text="$15:00"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#131313" />

                </LinearLayout>

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="product name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#0d0d0d"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/product_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Men Clothing"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#878787"
                    android:textSize="@dimen/_11sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:orientation="horizontal">

                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:rating="3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=" 1 rating and review"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#5a8ded"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/LL_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/LL_info"
                android:background="#e7e7e7"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/_5sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="QUANTITY"
                            android:textSize="@dimen/_10sdp" />

                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="40sp"
                            android:orientation="horizontal">

                            <Button
                                android:background="@drawable/bg_round_rect"
                                android:textColor="#ffffff"
                                android:layout_width="@dimen/_26sdp"
                                android:layout_height="@dimen/_21sdp"
                                android:gravity="center"
                                android:text="-" />

                            <TextView
                                android:layout_gravity="center_vertical"
                                android:layout_width="@dimen/_46sdp"
                                android:layout_height="@dimen/_21sdp"
                                android:background="#fff"
                                android:gravity="center"
                                android:text="1" />

                            <Button
                                android:background="@drawable/bg_round_rect"
                                android:textColor="#ffffff"
                                android:layout_width="@dimen/_26sdp"
                                android:layout_height="@dimen/_21sdp"
                                android:layout_gravity="center"
                                android:text="+" />


                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:paddingRight="@dimen/_3sdp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:textSize="@dimen/_10sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TOTAL PRICE" />

                        <TextView
                            android:textSize="@dimen/_14sdp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textColor="#000000"
                            android:text="$15:00"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:layout_margin="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="#1e1e1e"
                    android:text="Please select all products options before adding this product in your cart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:paddingTop="@dimen/_5sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_below="@id/LL_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/_13sdp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#000"
                    android:text="Product Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:paddingTop="@dimen/_6sdp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:text="Typically made of cotton textile in a stockinette, or jersey, knit, it has a distinctively pliable texture compared to shirts made of woven cloth. "
                    android:textColor="#313131"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <Button
        android:textColor="@color/white"
        android:background="@color/addToCartButton"
        android:layout_alignParentBottom="true"
        android:text="add to cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
